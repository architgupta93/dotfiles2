! swap ctrl/alt
! clear control
! clear mod1
! keycode 37 = Alt_L Meta_L
! keycode 64 = Control_L
! add control = Control_L Control_R
! add mod1 = Alt_L Meta_L

! Define Control_R and Alt_R similar to Control_L and Alt_L
clear control
clear mod1
keycode 108 = Control_L
keycode 105 = Alt_R
add control = Control_L Control_R
add mod1 = Alt_R Meta_R

! Swap caps lock and escape
remove Lock = Caps_Lock
keycode 9 = Caps_Lock
keycode 66 = Escape
add Lock = Caps_Lock

remove mod4 = Super_L
add mod3 = Super_L
keysym Super_L = Mode_switch

keycode 43 = h H Left
keycode 44 = j J Down
keycode 45 = k K Up
keycode 46 = l L Right
keycode 31 = i I Home
keycode 57 = n N End
keycode 49 = asciitilde grave
